<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultipleImageActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some question?"
        android:textSize="22.0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.731"
        />
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/relative_layout"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30.0sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="45dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:id="@+id/layout1" android:orientation="horizontal" android:gravity="center">
            <ImageButton
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:id="@+id/button1" android:src="@drawable/sample_2"/>
            <ImageButton
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:id="@+id/button2" android:src="@drawable/sample_3"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_below="@+id/layout1" android:orientation="horizontal" android:gravity="center">
            <ImageButton
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:id="@+id/button3" android:src="@drawable/sample_4"/>
            <ImageButton
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:id="@+id/button4" android:src="@drawable/sample_5"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>